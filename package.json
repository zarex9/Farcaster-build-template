{
  "name": "mini-app-template",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "fork": "clear && bunx hardhat node --fork https://mainnet.base.org",
    "test": "clear && bun run clean && bun run compile && bun run deploy && bun wagmi generate && bunx hardhat test --network localhost",
    "clean": "clear && bunx hardhat clean",
    "compile": "clear && bunx hardhat compile",
    "deploy": "clear && bunx hardhat ignition deploy ./ignition/modules/Contract.ts --network localhost --reset",
    "tunnel": "clear && ngrok http 8545"
  },
  "dependencies": {
    "@nomicfoundation/hardhat-ignition": "^3.0.5",
    "@nomicfoundation/hardhat-toolbox-viem": "^5.0.1",
    "@openzeppelin/contracts": "^5.4.0",
    "@types/node": "^22.19.1",
    "@wagmi/cli": "^2.8.0",
    "forge-std": "github:foundry-rs/forge-std#v1.9.4",
    "hardhat": "^3.0.15",
    "hardhat-reown": "^0.0.7",
    "typescript": "~5.8.3",
    "viem": "^2.40.3"
  }
}
